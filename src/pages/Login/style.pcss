.links {
  margin-top: 48px;
  /* color: white; */
}
.links span{
  margin: 0 12px;
  color: white;
}
.link {
  composes: hyperlink from 'style/typography';
  text-shadow: 0 2px 3px rgba(0,0,0,0.5);
  text-decoration: none;
  color: white;
}
.link:hover {
  cursor: pointer;
  text-decoration: underline;
  color: #323233;
}
