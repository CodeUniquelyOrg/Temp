.page {
  composes: page from 'style/shared';
}
.background {
  composes: background from 'style/shared';
}
.blurOverlay  {
  composes: blurOverlay from 'style/shared';
}
.contents  {
  composes: contents from 'style/shared';
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  justify-content: center;
  align-items: center;
}
.logo {
  filter: drop-shadow(0px 7px 7px rgba(0,0,0,0.5));
  padding: 0px 0 0 0;
  margin-bottom: -24px;
}
.h1 {
  composes: heading1 from 'style/typography';
  color: white;
  text-shadow: 0 3px 7px rgba(0,0,0,0.5);
}
.h4 {
  composes: heading4 from 'style/typography';
  color: white;
  text-shadow: 0 2px 5px rgba(0,0,0,0.5);
}
.form {
  composes: form from 'style/form.pcss';
  background: rgba(255,255,255,0.8);
  max-width: 360px;
}
.error {
  composes: error from 'style/form.pcss';
}

