/* variables */

.form {
  padding: 48px;
  min-width: 320px;
  min-height: 320px;
  max-width: 800px;
  /* border: 1px solid rgba(0,0,0,0.1); */

  left: 50%;
  top: 50%;
  position: absolute;
  -webkit-transform: translate3d(-50%, -50%, 0);
  -moz-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}

.input {
  border: 2px solid transparent;
}
